---
interface Props {
  title: string;
  description: string;
  pubDate?: string;
  updatedDate?: string;
}

const { title, description, pubDate, updatedDate } = Astro.props;

const byline = {
  "@context": "https://schema.org",
  "@type": "Article",
  name: "Today I learned. | pufferbommy",
  url: "https://pufferbommy.github.io/til/",
  alternateName: "pufferbommy",
  headline: title,
  description: description,
  datePublished: pubDate ? new Date(pubDate).toISOString() : undefined,
  dateModified: updatedDate ? new Date(updatedDate).toISOString() : undefined,
  author: {
    "@type": "Person",
    name: "pufferbommy",
    url: "https://x.com/pufferbommy",
  },
};
---

<script
  is:inline
  type="application/ld+json"
  set:html={JSON.stringify(byline)}
/>
